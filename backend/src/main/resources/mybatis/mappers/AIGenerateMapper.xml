<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Full path of the corresponding Mapper interface -->
<mapper namespace="com.example.backend.Mappers.AIGenerateMapper">

    <!-- Common result mapping (reusable) -->
    <resultMap id="AIGenerateMap" type="com.example.backend.POJO.DO.AIGenerateDO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="category" property="category"/>
        <result column="title" property="title"/>
        <result column="reason" property="reason" jdbcType="LONGVARCHAR"/>
        <result column="status" property="status"/>
    </resultMap>

    <!-- 1. Insert garbage information -->
    <insert id="insert" parameterType="com.example.backend.POJO.DO.AIGenerateDO">
        INSERT INTO ai_generate (id, name, category, title, reason, status)
        VALUES (#{id}, #{name}, #{category}, #{title}, #{reason}, #{status})
    </insert>

    <!-- 2. Query single record by ID -->
    <select id="selectById" parameterType="String" resultMap="AIGenerateMap">
        SELECT id, name, category, title, reason, status
        FROM ai_generate
        WHERE id = #{id}
    </select>

    <!-- 3. Query by name (username/garbage name, adjust according to your business) -->
    <select id="selectByName" parameterType="String" resultMap="AIGenerateMap">
        SELECT id, name, category, title, reason, status
        FROM ai_generate
        WHERE name = #{name}
    </select>

    <!-- 4. Query all garbage information -->
    <select id="selectAll" resultMap="AIGenerateMap">
        SELECT id, name, category, title, reason, status
        FROM ai_generate
        ORDER BY id DESC
    </select>

    <!-- 5. Query with conditions (for pagination) -->
    <select id="selectWithConditions" resultMap="AIGenerateMap">
        SELECT id, name, category, title, reason, status
        FROM ai_generate
        <where>
            <if test="keyword != null and keyword.trim() != ''">
                AND name LIKE CONCAT('%', #{keyword}, '%')
            </if>
            <if test="type != null and type.trim() != ''">
                AND category = #{type}
            </if>
            <if test="status != null and status.trim() != ''">
                AND status = #{status}
            </if>
        </where>
        ORDER BY id DESC
    </select>

    <!-- 5. Update all fields (non-null check to avoid overwriting) -->
    <update id="update" parameterType="com.example.backend.POJO.DO.AIGenerateDO">
        UPDATE ai_generate
        SET
        <if test="name != null and name != ''">
            name = #{name},
        </if>
        <if test="category != null and category != ''">
            category = #{category},
        </if>
        <if test="title != null and title != ''">
            title = #{title},
        </if>
        <if test="reason != null and reason != ''">
            reason = #{reason},
        </if>
        <if test="status != null and status != ''">
            status = #{status}
        </if>
        WHERE id = #{id}
    </update>

    <!-- 6. Delete by ID -->
    <delete id="deleteById" parameterType="String">
        DELETE FROM ai_generate WHERE id = #{id}
    </delete>

</mapper>