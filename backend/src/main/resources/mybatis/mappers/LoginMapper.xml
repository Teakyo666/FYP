<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.backend.Mappers.LoginMapper">


    <resultMap id="LoginBaseMap" type="com.example.backend.POJO.DO.LoginDO">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="role" property="role"/>
    </resultMap>

    <!-- 1. Add -->
    <insert id="insert" parameterType="com.example.backend.POJO.DO.LoginDO">
        INSERT INTO user (id, username, password, role)
        VALUES (#{id}, #{username}, #{password}, #{role})
    </insert>

    <!-- 2. select by ID -->
    <select id="selectById" parameterType="String" resultMap="LoginBaseMap">
        SELECT id, username, password, role
        FROM user
        WHERE id = #{id}
    </select>

    <!-- 3. check from username -->
    <select id="selectByUsername" parameterType="String" resultMap="LoginBaseMap">
        SELECT id, username, password, role
        FROM user
        WHERE username = #{username}
    </select>

    <!-- 4. check all -->
    <select id="selectAll" resultMap="LoginBaseMap">
        SELECT id, username, password, role
        FROM user
        ORDER BY update_time DESC <!-- Order by update time descending -->
    </select>

    <!-- 5. Conditional query (only concatenate conditions when not null, to avoid SQL syntax errors) -->
    <select id="selectByCondition" resultMap="LoginBaseMap">
        SELECT id, username, password, role
        FROM user
        <where>
            <if test="username != null and username.trim() != ''">
                AND username LIKE CONCAT('%', #{username}, '%') <!-- Fuzzy query -->
            </if>
            <if test="role != null and role.trim() != ''">
                AND role = #{role} <!-- Exact query -->
            </if>
        </where>
        ORDER BY update_time DESC
    </select>

    <!-- 6. update -->
    <update id="update" parameterType="com.example.backend.POJO.DO.LoginDO">
        UPDATE user
        <set>
            <if test="username != null and username.trim() != ''">username = #{username},</if>
            <if test="password != null and password.trim() != ''">password = #{password},</if>
            <if test="role != null and role.trim() != ''">role = #{role},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 7. delete by ID -->
    <delete id="deleteById" parameterType="String">
        DELETE FROM user
        WHERE id = #{id}
    </delete>

</mapper>