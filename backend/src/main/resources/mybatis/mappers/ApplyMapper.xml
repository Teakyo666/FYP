<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.backend.Mappers.ApplyMapper">

    <!-- 结果集映射：数据库字段与DO属性的映射 -->
    <resultMap id="ApplyResultMap" type="com.example.backend.POJO.DO.ApplyDO">
        <id column="id" property="id"/> <!-- 主键映射 -->
        <result column="user_id" property="user_id"/>
        <result column="to_apply" property="to_apply"/>
        <result column="status" property="status"/>
        <result column="is_deleted" property="is_deleted"/>
    </resultMap>

    <!-- 新增申请记录 -->
    <insert id="insert" parameterType="com.example.backend.POJO.DO.ApplyDO">
        INSERT INTO apply (
            id, user_id, to_apply, status, is_deleted
        ) VALUES (
                     #{id}, #{user_id}, #{to_apply}, #{status}, #{is_deleted,jdbcType=BIT}
                 )
    </insert>

    <!-- 根据ID物理删除 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM apply WHERE id = #{id}
    </delete>

    <!-- 根据ID全字段更新 -->
    <update id="updateById" parameterType="com.example.backend.POJO.DO.ApplyDO">
        UPDATE apply
        SET
            user_id = #{user_id},
            to_apply = #{to_apply},
            status = #{status},
            is_deleted = #{is_deleted,jdbcType=BIT}
        WHERE id = #{id}
    </update>

    <!-- 根据ID查询（过滤已删除数据） -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="ApplyResultMap">
        SELECT id, user_id, to_apply, status, is_deleted
        FROM apply
        WHERE id = #{id}
          AND is_deleted = 0
    </select>

    <!-- 查询所有未删除的申请记录 -->
    <select id="selectAll" resultMap="ApplyResultMap">
        SELECT id, user_id, to_apply, status, is_deleted
        FROM apply
        WHERE is_deleted = 0
    </select>


</mapper>