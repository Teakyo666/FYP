<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Full path of the corresponding Mapper interface -->
<mapper namespace="com.example.backend.Mappers.GarbageMapper">

    <!-- Common result mapping (reusable) -->
    <resultMap id="GarbageResultMap" type="com.example.backend.POJO.DO.GarbageDO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="category" property="category"/>
        <result column="title" property="title"/>
        <!-- Key fix: specify jdbcType to properly handle MySQL TEXT/BLOB fields -->
        <result column="reason" property="reason" jdbcType="LONGVARCHAR"/>
    </resultMap>

    <!-- 1. Insert garbage information -->
    <insert id="insert" parameterType="com.example.backend.POJO.DO.GarbageDO">
        INSERT INTO garbage (id, name, category, title, reason)
        VALUES (#{id}, #{name}, #{category}, #{title}, #{reason})
    </insert>

    <!-- 2. Query single record by ID -->
    <select id="selectById" parameterType="String" resultMap="GarbageResultMap">
        SELECT id, name, category, title, reason
        FROM garbage
        WHERE id = #{id}
    </select>
    <!-- 4. Query all garbage information -->
    <select id="selectAll" resultMap="GarbageResultMap">
        SELECT id, name, category, title, reason
        FROM garbage
        ORDER BY id DESC
    </select>

    <!-- 5. Query with conditions (for pagination) -->
    <select id="selectWithConditions" resultMap="GarbageResultMap">
        SELECT id, name, category, title, reason
        FROM garbage
        <where>
            <if test="keyword != null and keyword.trim() != ''">
                AND name LIKE CONCAT('%', #{keyword}, '%')
            </if>
            <if test="type != null and type.trim() != ''">
                AND category = #{type}
            </if>
        </where>
        ORDER BY id DESC
    </select>

    <!-- 5. Update all fields (non-null check to avoid overwriting) -->
    <update id="update" parameterType="com.example.backend.POJO.DO.GarbageDO">
        UPDATE garbage
        SET
        <if test="name != null and name != ''">
            name = #{name},
        </if>
        <if test="category != null and category != ''">
            category = #{category},
        </if>
        <if test="title != null and title != ''">
            title = #{title},
        </if>
        <if test="reason != null and reason != ''">
            reason = #{reason}
        </if>
        WHERE id = #{id}
    </update>

    <!-- 6. Delete by ID -->
    <delete id="deleteById" parameterType="String">
        DELETE FROM garbage WHERE id = #{id}
    </delete>

</mapper>